@model Jadval.Application.DTOs.Account.Requests.ChangeUserNameRequest
@{
    ViewBag.title = "ChangeUserName";
}
<div>
    <div class="col-md-3 m-auto">

        <form method="post" class="form-horizontal">
            <div class="form-group">
                <label for="userpassword">UserName</label>
                <input class="form-control" type="text" asp-for="UserName">
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="mt-3">
                <button class="btn btn-primary btn-block waves-effect waves-light" type="submit">ثبت</button>
            </div>
        </form>
    </div>
</div>
