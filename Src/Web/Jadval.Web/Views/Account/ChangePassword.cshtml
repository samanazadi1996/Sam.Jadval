@model Jadval.Application.DTOs.Account.Requests.ChangePasswordRequest
@{
    ViewBag.title = "ChangePassword";
}
<div>
    <div class="col-md-3 m-auto">

        <form method="post" class="form-horizontal">

            <div class="form-group">
                <label for="userpassword">Password</label>
                <input class="form-control" type="password" asp-for="Password">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="userpassword">ConfirmPassword</label>
                <input class="form-control" type="password" asp-for="ConfirmPassword">
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="mt-3">
                <button class="btn btn-primary btn-block waves-effect waves-light" type="submit">ثبت</button>
            </div>
        </form>
    </div>
</div>
