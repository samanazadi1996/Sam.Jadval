@model Jadval.Application.DTOs.Account.Requests.AuthenticationRequest
@{
    ViewBag.title = "Login";
}

<form method="post" class="form-horizontal">

    <div class="form-group">
        <label for="username">User Name</label>
        <input class="form-control" type="text" asp-for="UserName">
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="userpassword">Password</label>
        <input class="form-control" type="password" asp-for="Password">
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <button class="btn btn-primary btn-block waves-effect waves-light" type="submit">Login</button>
    </div>

    <div class="mt-4 text-center">
        <a href="pages-recoverpw.html" class="text-muted"><i class="mdi mdi-lock mr-1"></i> Forgot your password</a>
    </div>
</form>
